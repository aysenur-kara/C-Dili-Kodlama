#include<stdio.h>

void main() {
int sayi1, sayi2, islem, topsonuc, c覺ksonuc, carpsonuc, bolsonuc;

printf("ilk sayiyi giriniz(tam sayi)\n: ");
scanf("%d", &sayi1);

printf("ikinci sayiyi giriniz(tam say覺)\n: ");
scanf("%d", &sayi2);

printf("islem seciniz(1=toplama,2=cikarma,3=carpma,4=bolme)\n:");
scanf("%d", &islem);

if (islem == 1) {
topsonuc = sayi1 + sayi2;
printf("%d+%d = %d",sayi1,sayi2, topsonuc);
}
else if (islem == 2) {
c覺ksonuc = sayi1 - sayi2;
printf("%d-%d = %d", sayi1, sayi2, c覺ksonuc);
}
else if (islem == 3) {
carpsonuc = sayi1*sayi2;
printf("%d*%d = %d", sayi1, sayi2, carpsonuc);
}
else if (islem == 4) {
bolsonuc = sayi1 / sayi2;
